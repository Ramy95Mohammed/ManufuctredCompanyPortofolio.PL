@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
	<!-- main -->
	
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="Register">	
					<div class="alert-danger" asp-validation-summary="All"></div>
					<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
					<span class="text-danger" asp-validation-for="Email"></span>

					<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<span class="text-danger" asp-validation-for="Password"></span>
					
					<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" class="checkbox" asp-for="IsAgree" required>
							<span>I Agree To The Terms & Conditions</span>
					<span class="text-danger" asp-validation-for="IsAgree"></span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP" asp-action="Register">
				</form>
				<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
			</div>
		</div>
